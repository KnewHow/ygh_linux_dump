#%Module 1.0
#
#  OpenMPI module for use with 'environment-modules' package:
# 
prepend-path 		PATH 		/usr/lib64/compat-openmpi/bin
prepend-path 		LD_LIBRARY_PATH /usr/lib64/compat-openmpi/lib
prepend-path		PYTHONPATH	/usr/lib64/python2.6/site-packages/compat-openmpi
setenv 			MPI_BIN		/usr/lib64/compat-openmpi/bin
setenv			MPI_SYSCONFIG	/etc/compat-openmpi-x86_64
setenv			MPI_FORTRAN_MOD_DIR	/usr/lib64/gfortran/modules/compat-openmpi-x86_64
setenv			MPI_INCLUDE	/usr/include/compat-openmpi-x86_64
setenv	 		MPI_LIB		/usr/lib64/compat-openmpi/lib
setenv			MPI_MAN		/usr/share/man/compat-openmpi-x86_64
setenv			MPI_PYTHON_SITEARCH	/usr/lib64/python2.6/site-packages/compat-openmpi
setenv			MPI_COMPILER	compat-openmpi-x86_64
setenv			MPI_SUFFIX	_compat_openmpi
setenv	 		MPI_HOME	/usr/lib64/compat-openmpi
